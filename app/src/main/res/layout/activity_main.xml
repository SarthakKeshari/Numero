<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="Numero"
        android:fontFamily="cursive"
        android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num"
        android:inputType="numberSigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        android:hint="Enter a number"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="Check for:"/>

    <Button
        android:id="@+id/palindrome"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Palindrome"/>

    <Button
        android:id="@+id/armstrong"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Armstrong"/>

    <Button
        android:id="@+id/fibonacci"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Nth term of Fibonacci"/>

    <Button
        android:id="@+id/proth"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Proth"/>

    <Button
        android:id="@+id/positive"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Positive"/>

    <Button
        android:id="@+id/negative"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Negative"/>

    <Button
        android:id="@+id/square"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Square"/>

    <Button
        android:id="@+id/cube"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Cube"/>

    <Button
        android:id="@+id/kaprekar"
        android:backgroundTintMode="screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:text="Kaprekar"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>